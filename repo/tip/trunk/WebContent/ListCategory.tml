<t:layout xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <t:grid  source="categories" row="category" pagerPosition="both"
    	model="model" reorder="parentCategory">
    	
    	<t:parameter name="parentCategoryCell">
    		<t:if test="${category.parentCategory}">
    			${category.parentCategory.name}
    		</t:if>
    	</t:parameter>
    </t:grid>        
</t:layout>